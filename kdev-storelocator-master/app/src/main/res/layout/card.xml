<?xml version="1.0" encoding="utf-8"?><!-- layout di ogni cardview -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="3dp">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardElevation="3dp"
        card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/contenuto"
            android:paddingBottom="10dp"
            android:paddingLeft="5dp"
            android:paddingTop="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nome negozio"
                android:id="@+id/storeName"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:textStyle="bold|italic"
                android:textSize="27sp"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="5dp"
                android:textColor="@color/oro" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Indirizzo negozio"
                android:id="@+id/storeAddress"
                android:layout_below="@+id/storeName"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:drawableLeft="@drawable/ic_place"
                android:drawablePadding="5dp"
                android:textColor="@color/colorPrimary"
                android:gravity="center_vertical"
                android:padding="5dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Telefono negozio"
                android:id="@+id/storePhone"
                android:layout_below="@+id/storeAddress"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:drawableLeft="@drawable/ic_phone"
                android:drawablePadding="5dp"
                android:textColor="@color/colorPrimary"
                android:gravity="center_vertical"
                android:padding="5dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/storeDistance"
                android:text="Calcolo distanza..."
                android:layout_below="@+id/storePhone"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:drawablePadding="5dp"
                android:textColor="@color/oro"
                android:gravity="center_vertical"
                android:paddingLeft="6dp" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>